{
	"name": "@gibipromo/web-api",
	"version": "1.0.0",
	"description": "REST API for GibiPromo website and Chrome extension",
	"main": "dist/index.js",
	"scripts": {
		"start": "node dist/index.js",
		"dev": "ts-node-dev --respawn --transpile-only src/index.ts",
		"build": "tsc",
		"test": "jest --maxWorkers=1",
		"test:coverage": "jest --coverage --maxWorkers=1",
		"test:watch": "jest --watch --maxWorkers=1",
		"lint": "eslint . --ext .ts",
		"lint:fix": "eslint . --ext .ts --fix",
		"init:dynamo": "node ../../scripts/init-dynamo.js"
	},
	"dependencies": {
		"@gibipromo/shared": "^1.0.0",
		"aws-sdk": "^2.1480.0",
		"cors": "^2.8.5",
		"dotenv": "^16.3.1",
		"express": "^4.18.2",
		"helmet": "^7.1.0",
		"morgan": "^1.10.0"
	},
	"devDependencies": {
		"@types/cors": "^2.8.14",
		"@types/express": "^4.17.20",
		"@types/jest": "^29.5.5",
		"@types/morgan": "^1.9.6",
		"@types/node": "^20.19.18",
		"@types/supertest": "^2.0.14",
		"@typescript-eslint/eslint-plugin": "^6.21.0",
		"@typescript-eslint/parser": "^6.21.0",
		"eslint": "^8.51.0",
		"jest": "^29.7.0",
		"supertest": "^6.3.3",
		"ts-jest": "^29.1.1",
		"ts-node-dev": "^2.0.0",
		"typescript": "^5.2.2"
	}
}
