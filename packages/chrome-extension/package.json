{
	"name": "@gibipromo/chrome-extension",
	"version": "1.0.0",
	"description": "Chrome extension for GibiPromo platform",
	"private": true,
	"scripts": {
		"build": "webpack --mode=production",
		"dev": "webpack --mode=development --watch",
		"package": "npm run build && node scripts/package.js",
		"test": "jest --maxWorkers=1",
		"test:coverage": "jest --coverage --maxWorkers=1",
		"test:watch": "jest --watch --maxWorkers=1",
		"lint": "eslint . --ext .ts",
		"lint:fix": "eslint . --ext .ts --fix",
		"type-check": "tsc --noEmit"
	},
	"dependencies": {
		"@gibipromo/shared": "^1.0.0",
		"chart.js": "^4.4.0"
	},
	"devDependencies": {
		"@types/chrome": "^0.0.245",
		"@types/jest": "^29.5.5",
		"@types/node": "^20.19.18",
		"@typescript-eslint/eslint-plugin": "^6.7.4",
		"@typescript-eslint/parser": "^6.7.4",
		"ajv": "^6.12.6",
		"ajv-keywords": "^3.5.2",
		"eslint": "^8.51.0",
		"jest": "^29.7.0",
		"jest-environment-jsdom": "^29.7.0",
		"ts-jest": "^29.1.1",
		"ts-loader": "^9.4.4",
		"typescript": "^5.2.2",
		"webpack": "^5.88.2",
		"webpack-cli": "^5.1.4"
	}
}
