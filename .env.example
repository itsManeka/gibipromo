# Runtime environment (dev/prod)
NODE_ENV=development

# Telegram Bot Token
TELEGRAM_BOT_TOKEN=your_bot_token_here

# Amazon PA-API Credentials
AMAZON_ACCESS_KEY=your_access_key_here
AMAZON_SECRET_KEY=your_secret_key_here
AMAZON_PARTNER_TAG=your_partner_tag_here
AMAZON_PARTNER_TYPE=Associates

# Mock Controls
USE_MOCK_PAAPI=true  # Set to false in production to use real PA-API

# AWS Configuration
AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=local
AWS_SECRET_ACCESS_KEY=local
DYNAMODB_ENDPOINT=http://localhost:8000