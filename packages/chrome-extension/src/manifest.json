{
	"manifest_version": 3,
	"name": "GibiPromo - Monitor de Preços Amazon",
	"version": "1.0.0",
	"description": "Monitore preços de produtos da Amazon e receba alertas de promoções",
	"permissions": ["storage", "tabs"],
	"host_permissions": [
		"https://www.amazon.com.br/*",
		"http://localhost:3001/*",
		"https://*.gibipromo.com/*"
	],
	"background": {
		"service_worker": "background/service-worker.js",
		"type": "module"
	},
	"content_scripts": [
		{
			"matches": ["https://www.amazon.com.br/*/dp/*", "https://www.amazon.com.br/dp/*"],
			"js": ["content/index.js"],
			"css": ["styles/injected.css"],
			"run_at": "document_idle"
		}
	],
	"action": {
		"default_popup": "popup/popup.html",
		"default_icon": {
			"16": "icons/icon16.png",
			"48": "icons/icon48.png"
		}
	},
	"icons": {
		"16": "icons/icon16.png",
		"48": "icons/icon48.png",
		"128": "icons/icon128.png"
	}
}

