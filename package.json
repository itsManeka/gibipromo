{
	"name": "gibipromo-platform",
	"version": "1.0.0",
	"description": "GibiPromo platform - Multi-application price monitoring system",
	"private": true,
	"workspaces": [
		"packages/*"
	],
	"scripts": {
		"build": "npm run build --workspaces",
		"dev": "npm run dev --workspace=packages/telegram-bot",
		"test": "npm run test --workspaces -- --maxWorkers=1",
		"test:coverage": "npm run test:coverage --workspaces -- --maxWorkers=1",
		"lint": "npm run lint --workspaces",
		"lint:fix": "npm run lint:fix --workspaces",
		"init:dynamo": "node scripts/init-dynamo.js",
		"dev:bot": "npm run dev --workspace=packages/telegram-bot",
		"test:bot": "npm run test --workspace=packages/telegram-bot -- --maxWorkers=1",
		"build:shared": "npm run build --workspace=packages/shared"
	},
	"dependencies": {
		"aws-sdk": "^2.1480.0",
		"croner": "^9.1.0",
		"dotenv": "^16.3.1",
		"paapi5-nodejs-sdk": "^1.1.0",
		"telegraf": "^4.15.6",
		"toad-scheduler": "^1.6.0"
	},
	"devDependencies": {
		"@types/jest": "^29.5.5",
		"@types/node": "^20.19.18",
		"@typescript-eslint/eslint-plugin": "^6.7.4",
		"@typescript-eslint/parser": "^6.7.4",
		"eslint": "^8.51.0",
		"jest": "^29.7.0",
		"ts-jest": "^29.1.1",
		"ts-node-dev": "^2.0.0",
		"typescript": "^5.2.2"
	},
	"engines": {
		"node": ">=18.0.0",
		"npm": ">=8.0.0"
	}
}